  body
    
    block nav
      nav.topnav
        a(href='#about') About
        a(href='#work') Portfolio
        a(href='#contact') Contact
        button.menu
          svg
            path(d='M0,1.5 20,1.5' stroke-width='3')
            path(d='M0,8 20,8' stroke-width='3')
